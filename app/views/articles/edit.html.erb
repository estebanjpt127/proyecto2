
<!DOCTYPE html>
<html lang="en">
 
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Blog</title>
     <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">
  </head>
 
  <body id="page-top">
     <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
      <div class="container">
                <%= link_to 'My Blog', {controller: 'articles' }, class: 'nav-link js-scroll-trigger' %>
                <h1>Editing article</h1>
                <%= link_to 'Back', articles_path, class: 'btn btn-primary' %> 
      </div>
    </nav>
 
    <!-- Header -->
    <header class="masthead">
      <div class="container">
        <img class="img-fluid" src="assets/profile.png" alt="">
        <%= render 'form' %>
        <%= form_for :article, url: article_path(@article), method: :patch do |f| %>
            <% if @article.errors.any? %>
                <div id="error_explanation">
                <h2>
                    <%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:
                </h2>
                <ul>
                    <% @article.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                    <% end %>
                </ul>
                </div>
            <% end %>
            <% end %>

      </div>
    </header>
 
   
  <!-- Footer -->
    <footer class="text-center">
      <div class="footer-below">
        <div class="container">
          <div class="col-lg-12"">
              <h3>Ingeniería en Telemática</h3>
              <ul class="list-inline">
                <li class="list-inline-item">
                  <a class="btn-social btn-outline" href="#">
                    <i class="fa fa-fw fa-facebook"></i>
                  </a>
                </li>
                <li class="list-inline-item">
                  <a class="btn-social btn-outline" href="#">
                    <i class="fa fa-fw fa-twitter"></i>
                  </a>
                </li>
                  </ul>
            </div>
          </div>
      </div>
    </footer>
     <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
    <div class="scroll-top d-lg-none">
      <a class="btn btn-primary js-scroll-trigger" href="">
        <i class="fa fa-chevron-up"></i>
      </a>
    </div>
     <!-- Bootstrap core JavaScript -->
    <script src="assets/jquery.min.js"></script>
    <script src="assets/bootstrap.bundle.min.js"></script>
    <!-- Contact Form JavaScript -->
    <script src="assets/jqBootstrapValidation.js"></script>
       <!-- Custom scripts for this template -->
    <script src="assets/freelancer.min.js"></script>
   </body>
</html>
